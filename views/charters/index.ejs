<% layout('layouts/boilerplate')%>
<h1>All Charters</h1>

<% for (let charter of charters){%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img src="<%=charter.image%>" height="250px" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%=charter.name %></h5>
        <p class="card-text"><%=charter.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= charter.location %> </small>
        </p>
        <a href="/charters/<%=charter._id%>" class="btn btn-success">View <%=charter.name%> </a>
      </div>
    </div>
  </div>
</div>
<%}%>
